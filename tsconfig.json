{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "outDir": "dist",
        "lib": ["esnext"],
        "types": ["node"],
        "baseUrl": "./"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "test-server"]
}
